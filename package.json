{
  "name": "csv-matcher-app",
  "version": "1.1.2",
  "description": "CSV Service Matcher - A tool for matching and merging CSV service data",
  "main": "main.js",
  "homepage": ".",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac --publish=never",
    "build-win": "electron-builder --win --publish=never",
    "build-linux": "electron-builder --linux --publish=never",
    "build-all": "electron-builder --mac --win --linux --publish=never"
  },
  "build": {
    "appId": "com.csvmatcher.app",
    "productName": "CSV Service Matcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "v2/**/*",
      "package.json",
      "!dist/**/*",
      "!node_modules/**/*",
      "!*.md",
      "!v1/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "icon": "v2/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
